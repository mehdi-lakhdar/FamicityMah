{% extends '@EspritFamycity/Default/home.html.twig' %}

  {% block mainContent %}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Gestion Des Evènements
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">UI</a></li>
            <li class="active">Ajouter des évènements</li>
        </ol>
    </section>

    <!-- Main content -->


    <section class="content">

        <br>
        <br>


        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Alert!</h4>
           Votre Evenement est enregistrée avec Succès . This alert is dismissable.
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">

                    <div>



                        {% for i in m %}
                            <div class="col-md-4">
                                <!-- Widget: user widget style 1 -->
                                <div class="box box-widget widget-user-2">
                                    <!-- Add the bg color to the header using any of the bg-* classes -->
                                    <div class="widget-user-header bg-blue">
                                        <div class="widget-user-image">
                                            <img class="img-circle" src="{{ i.addUser.image }}" alt="User Avatar" >
                                        </div>
                                        <!-- /.widget-user-image -->
                                        <br>
                                        <h3 class="widget-user-username">{{ i.libelle }}</h3>
                                        <h5 class="widget-user-desc">{{ i.addUser.nom }}</h5>
                                    </div>
                                    <div class="box-footer no-padding">
                                        <ul class="nav nav-stacked">
                                            <li>Budget : <a href="#">{{ i.cost }} <span class="pull-right badge bg-red"></span></a></li>
                                            <li>Adresse : <a href="#">{{ i.categorie }} <span class="pull-right badge bg-aqua"></span></a></li>
                                            <li>Date :<a href="#">{{ i.dateDebut |date('Y-m-d')}} <span class="pull-right badge bg-green"></span></a></li>
                                            <li>Description<a href="#">{{ i.categorie }} <span class="pull-right badge bg-blue"></span></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.widget-user -->
                            </div>


                        {% endfor %}










                    </div>

                </div>







            </div>
        </div>


    </section>

</div>
    {% endblock %}


