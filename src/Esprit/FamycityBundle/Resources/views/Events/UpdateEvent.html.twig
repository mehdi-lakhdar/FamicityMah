
{% extends '@EspritFamycity/Default/home.html.twig' %}

  {% block mainContent %}


      <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
          <h1>
              Gestion Des Evènements
              <small></small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
              <li><a href="#">UI</a></li>
              <li class="active">Modifier un évènement</li>
          </ol>
      </section>


      <!-- Main content -->


      <section class="content">

          <br>
          <br>


          <div class="col-md-12">
              <div class="row">
                  <div class="col-md-6">

                      <div>



                          <div class="box box-warning">
                              <div class="box-header with-border">
                                  <h3 class="box-title"><i class="fa fa-calendar">   Modifier </i></h3>
                              </div>
                              <!-- /.box-header -->

                              <!-- form start -->
                              <form role="form" action="{{ path('SaveupdatedEvent') }}" method="post" name="form">
                                  <input type="hidden" class="form-control" name="id"  value="{{ e.idEvent }}">
                                  <div class="box-body">
                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Photo de l’évènement</label>
                                          <input type="text"  name="image"  src="https://static2-production.famicity.com/images/tree-loader_180.gif" value="{{ e.image }}">
                                      </div>

                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Théme ou Catégorie de l’évènement</label>
                                          <input type="text" class="form-control" name="categorie"  placeholder="Quel type d'evenement s'agit il?" value="{{ e.categorie }}">
                                      </div>

                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Nom de l’évènement</label>
                                          <input type="text" class="form-control" name="libelle"  placeholder="Ajoutez un nom court et clair" value="{{ e.libelle }}">
                                      </div>

                                      <div class="form-group">
                                          <label for="exampleInputEmail1">Lieu de l’évènement</label>
                                          <input type="text" class="form-control" name="lieu"  placeholder="Ajoutez un lieu ou une adresse" value="{{ e.lieu }}">
                                      </div>

                                      <label for="exampleInputEmail1">Budget</label>
                                      <div class="input-group">
                                          <span class="input-group-addon">$</span>
                                          <input type="text" class="form-control" name="cost" value="{{ e.cost }}">
                                          <span class="input-group-addon">TND</span>
                                      </div>


                                      <!-- textarea -->
                                      <div class="form-group">
                                          <label>Description</label>
                                          <textarea class="form-control" name="description" rows="3"  text="{{ e.description}}"></textarea>
                                      </div>

                                      <div class="form-group">
                                          <label>Date/Heure:</label>

                                          <div class="input-group">
                                              <div class="input-group-addon">
                                                  <i class="fa fa-calendar"></i>
                                              </div>
                                              <input type="date" name="dateDebut" class="form-control" value="{{ e.dateDebut |date('Y-m-d')}}" >
                                          </div>
                                          <!-- /.input group -->
                                      </div>
                                      <div class="form-group">
                                          <label>Date/Heure Fin:</label>

                                          <div class="input-group">
                                              <div class="input-group-addon">
                                                  <i class="fa fa-calendar"></i>
                                              </div>
                                              <input type="date" name="dateFin" class="form-control" value="{{ e.dateFin |date('Y-m-d')}}" >
                                          </div>
                                          <!-- /.input group -->
                                      </div>



                                  </div>
                                  <!-- /.box-body -->

                                  <div class="box-footer">
                                      <button type="submit" class="btn btn-warning">Valider</button>
                                  </div>
                              </form>
                          </div>











                      </div>

                  </div>







              </div>
          </div>


      </section>


  {% endblock %}