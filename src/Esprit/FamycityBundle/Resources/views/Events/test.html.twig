{% extends '@EspritFamycity/Default/home2.html.twig' %}

 {% block mainContent %}



     <div class="row">

         <div class="col-md-3 col-sm-6 col-xs-12">
             <div class="info-box bg-green" style="margin-top: 20px">
                 <span class="info-box-icon"><i class="fa fa-calendar"></i></span>

                 <div class="info-box-content">
                     <span class="info-box-text">Events</span>
                     <span class="info-box-number" id="count">{{ count }}</span>

                     <div class="progress">
                         <div class="progress-bar" style="width: {{ count * 100 /100 }}%"></div>
                     </div>
                     <span class="progress-description" id="result">
                  {{ count * 100 /100 }} % Increase in 30 Days
                  </span>
                 </div>


                 <div class="col-md-3 col-sm-6 col-xs-12">

                 </div>

                 <div class="col-md-3 col-sm-6 col-xs-12">

                 </div>

                 <div class="col-md-3 col-sm-6 col-xs-12">

                 </div>



             </div>

         </div>



     </div>



     <div class="box box-primary">
         <div class="box-header ui-sortable-handle" style="cursor: move;">
             <i class="ion ion-clipboard"></i>

             <h3 class="box-title">Liste des evenements</h3>

             <div class="box-tools pull-right">
                 <ul class="pagination pagination-sm inline">
                     <li><a href="#">«</a></li>
                     <li><a href="#">1</a></li>
                     <li><a href="#">2</a></li>
                     <li><a href="#">3</a></li>
                     <li><a href="#">»</a></li>
                 </ul>
             </div>
         </div>
         <!-- /.box-header -->
         <div class="box-body">
             <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
             <ul class="todo-list ui-sortable">
                 {% for events in e %}
                     <li>
                         <!-- drag handle -->
                         <span class="handle ui-sortable-handle">
                        <i class="fa fa-ellipsis-v"></i>
                        <i class="fa fa-ellipsis-v"></i>
                      </span>
                         <!-- checkbox -->
                         <input type="checkbox" value="">
                         <!-- todo text -->
                         <span class="text">{{ events.libelle }}</span>
                         <!-- Emphasis label -->
                         <small class="label label-success"><i class="fa fa-clock-o"></i> {{ events.dateDebut|date('Y-m-d') }}</small>
                         <small class="label label-danger"><i class="fa fa-clock-o"></i> {{ events.dateFin|date('Y-m-d') }}</small>

                         <small class="label label-primary"><i class="fa fa-dollar"></i> {{ events.cost }}</small>
                         {# Rating <small class="label "> {{ events.cost |rating(1, "fa-3x") }}</small>#}
                         <!-- General tools such as edit or delete-->
                         <div class="tools">

                             <a href="{{ path('DeleteEvent',{'id':events.idEvent}) }}"> <i class="fa fa-trash-o"></i></a>
                             <a href="{{ path('UpdateEvent',{'id':events.idEvent}) }}"><i class="fa fa-edit"></i></a>
                         </div>
                     </li>
                 {% endfor %}
             </ul>
         </div>
         <!-- /.box-body -->
         <div class="box-footer clearfix no-border">
             <a href="{{ path('AjoutEvents') }}"> <button type="button" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add Event</button></a>
         </div>
     </div>



 {% endblock %}


