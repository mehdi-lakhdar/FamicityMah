{% extends '@EspritFamycity/Default/home.html.twig' %}

  {% block mainContent %}


      <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <section class="content-header">
              <h1>
                  Gestion Des Courses
                  <small></small>
              </h1>
              <ol class="breadcrumb">
                  <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                  <li><a href="#">UI</a></li>
                  <li class="active">Creation Course</li>
              </ol>
          </section>


          <!-- Main content -->


          <section class="content">

              <br>
              <br>




              <div class="col-md-12">
                  <div class="row">
                      <div class="col-md-12">





                          {% for i in m %}
                              <div class="col-md-4">
                                  <!-- Widget: user widget style 1 -->
                                  <div class="box box-widget widget-user-2">
                                      <!-- Add the bg color to the header using any of the bg-* classes -->
                                      <div class="widget-user-header bg-blue">
                                          <div class="widget-user-image">
                                              <img class="img-circle" src="{{ i.createur.image }}" alt="User Avatar" >
                                          </div>
                                          <!-- /.widget-user-image -->
                                          <br>
                                          <h3 class="widget-user-username">{{ i.nom }}</h3>
                                          <h5 class="widget-user-desc">{{ i.createur.nom }}</h5>
                                      </div>
                                      <div class="box-footer no-padding">
                                          <ul class="nav nav-stacked">
                                              <li>Budget : <a href="#">{{ i.budget }} <span class="pull-right badge bg-red"></span></a></li>
                                              <li>Adresse : <a href="#">{{ i.adresse }} <span class="pull-right badge bg-aqua"></span></a></li>
                                              <li>Date :<a href="#">{{ i.courseDate }} <span class="pull-right badge bg-green"></span></a></li>
                                              <li>Status<a href="#">{{ i.status }} <span class="pull-right badge bg-blue"></span></a></li>

                                              <li>Description<a href="#">{{ i.description }} <span class="pull-right badge bg-blue"></span></a></li>


                                              <a href="{{ path('takecourse',{'idCourse':i.idCourse})}}"><button type="button" class="btn btn-block btn-primary">Prendre en Charge</button></a>
                                          </ul>
                                      </div>
                                  </div>
                                  <!-- /.widget-user -->
                              </div>


                          {% endfor %}










                      </div>

                  </div>








              </div>


          </section>

      </div>

  {% endblock %}


