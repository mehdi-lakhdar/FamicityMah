{% extends '@EspritFamycity/Default/home.html.twig' %}

  {% block mainContent %}


      <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
          <h1>
              Gestion Des Courses
              <small></small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
              <li><a href="#">UI</a></li>
              <li class="active">Creation Course</li>
          </ol>
      </section>


      <!-- Main content -->


      <section class="content">

          <br>
          <br>


          <div class="col-md-12">
              <div class="row">
                  <div class="col-md-12">

                      <div>



                          <div class="box box-primary">

                              <!-- /.box-header -->
                              <div class="col-md-12">
                                  <!-- Info Boxes Style 2 -->







                                  {% for i in us %}
                                  <div class="info-box bg-red">
                                      <span class="info-box-icon"><i class="ion ion-ios-pricetag-outline"></i></span>

                                      <div class="info-box-content">
                                          <span class="info-box-text">{{ i.nom }} {{ i.prenom }}</span>
                                          <span class="info-box-number">{{ i.nbCourse }} / {{  ct }}</span>

                                          <div class="progress">
                                              <div class="progress-bar" style="width: {{ i.nbCourse * 100 / ct }}%"></div>
                                          </div>
                                          <span class="progress-description">
                    {{ i.nbCourse * 100 / ct }}% des Courses
                  </span>
                                      </div>
                                      <!-- /.info-box-content -->
                                  </div>

                                  {% endfor %}







                                  <!-- /.info-box -->

                                  <!-- /.info-box -->

                                  <!-- /.info-box -->


                              </div>

                          </div>











                      </div>

                  </div>







              </div>
          </div>


      </section>


  {% endblock %}